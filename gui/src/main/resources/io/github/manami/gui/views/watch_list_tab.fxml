           <padding>
               <Insets left="10.0" right="10.0" />
           </padding>
          <content>
              <BorderPane prefHeight="-1.0" prefWidth="-1.0">
                  <top>
                      <Label text="Watch List">
                          <font>
                              <Font name="System Bold" size="16.0" />
                          </font>
                          <BorderPane.margin>
                              <Insets bottom="25.0" right="10.0" top="10.0" />
                          </BorderPane.margin>
                      </Label>
                  </top>
                  <center>
                      <VBox spacing="30.0">
                          <BorderPane.margin>
                              <Insets />
                          </BorderPane.margin>
                         <children>
                             <Label text="This list contains all anime that you are planning to watch or that you are currently watching. You can add multiple entries by separating them with a blank." />
                             <HBox>
                                 <opaqueInsets>
                                     <Insets />
                                 </opaqueInsets>
                                 <VBox.margin>
                                     <Insets top="10.0" />
                                 </VBox.margin>
                                <children>
                                    <Label text="Add new URL:">
                                        <HBox.margin>
                                            <Insets right="10.0" top="3.0" />
                                        </HBox.margin>
                                        <font>
                                            <Font name="System Bold" size="11.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="txtUrl" prefHeight="22.0" prefWidth="277.0">
                                        <HBox.margin>
                                            <Insets right="10.0" />
                                        </HBox.margin>
                                    </TextField>
                                    <Button defaultButton="true" mnemonicParsing="false" onAction="#addEntry" text="add">
                                        <HBox.margin>
                                            <Insets right="10.0" />
                                        </HBox.margin>
                                    </Button>
