                                            <Insets left="20.0" />
                                        </HBox.margin>
                                    </ProgressIndicator>
                                    <Label fx:id="lblProgressMsg" text="Label" visible="false">
                                        <HBox.margin>
                                            <Insets left="10.0" top="4.0" />
                                        </HBox.margin>
                                        <font>
                                            <Font name="System Bold" size="11.0" />
                                        </font>
                                    </Label>
