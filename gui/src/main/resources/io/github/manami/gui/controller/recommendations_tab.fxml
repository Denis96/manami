<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="anchor" maxHeight="-1.0" maxWidth="-1.0" minHeight="-1.0" minWidth="-1.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.manami.gui.controller.RecommendationsController">
   <children>
       <ScrollPane id="scrollPane" fx:id="scrollPaneList" fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
           <padding>
               <Insets left="10.0" right="10.0" />
           </padding>
         <content>
            <VBox spacing="40.0">
               <children>
                  <VBox spacing="30.0">
                     <children>
                        <HBox>
                           <children>
                                  <Label text="Recommendations">
                                      <font>
                                          <Font name="System Bold" size="16.0" />
                                      </font>
                                  </Label>
                              <Pane HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnExport" mnemonicParsing="false" onAction="#export" text="export" visible="false">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                             <Label text="Recommendations based on user recommendations on myanimelist.net. Sorted with highest priority on top.">
                                 <VBox.margin>
                                     <Insets bottom="30.0" />
                                 </VBox.margin>
                             </Label>
                            <VBox alignment="CENTER">
                               <children>
                                    <Button fx:id="btnStart" defaultButton="true" mnemonicParsing="false" onAction="#start" text="Start Search" />
                              <HBox fx:id="hBoxProgress" alignment="CENTER" visible="false">
                                 <children>
                                    <VBox alignment="CENTER" spacing="5.0">
                                       <children>
                                          <HBox spacing="5.0">
                                             <children>
                                                      <ProgressBar fx:id="progressBar" prefHeight="25.0" prefWidth="220.0" />
                                                      <Button cancelButton="true" mnemonicParsing="false" onAction="#cancel" text="Cancel">
                                                          <VBox.margin>
                                                              <Insets top="30.0" />
                                                          </VBox.margin>
                                                      </Button>
                                             </children>
                                          </HBox>
                                                <Label fx:id="lblProgress" text="preparing">
                                                    <font>
                                                        <Font name="System Bold" size="11.0" />
                                                    </font>
                                                </Label>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                               </children>
                            </VBox>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </VBox>
                  <GridPane VBox.vgrow="ALWAYS">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <TableView fx:id="contentTable">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </GridPane>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
         </content>
       </ScrollPane>
   </children>
</AnchorPane>
